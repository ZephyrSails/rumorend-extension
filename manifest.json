{
  "manifest_version": 2,

  "name": "Rumorend",
  "description": "This extension protect you from rumor!",
  "version": "0.1",

  "web_accessible_resources": ["css/rumorensd.css"],

  "content_scripts": [{
    "matches": ["https://twitter.com/", "https://twitter.com/*"],
    "css": ["css/rumorend.css"],
    "js": ["js/jquery-3.1.1.slim.min.js", "js/rumorend.js"],
    "run_at" : "document_start"
 }],
  "background": {
    "scripts": ["js/rumorend-bg.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "images/icon.png",
    "default_title": "Extension will be enabled when you open twitter.com"
  },

  "permissions": [
    "https://twitter.com/",
    "activeTab",
    "tabs",
    "storage",
    "declarativeContent"
  ]
}
